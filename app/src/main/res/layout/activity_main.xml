<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_string_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_string_request" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_json_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_json_request" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_image_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_image_request" />

</LinearLayout>
